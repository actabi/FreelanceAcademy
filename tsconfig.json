{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "strictPropertyInitialization": false,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "sourceMap": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "./",
      "paths": {
        "@api/*": ["src/api/*"],
        "@config/*": ["src/config/*"],
        "@domain/*": ["src/domain/*"],
        "@services/*": ["src/services/*"],
        "@infrastructure/*": ["src/infrastructure/*"],
        "@utils/*": ["src/utils/*"],
        "@controllers/*": ["src/config/api/controllers/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }